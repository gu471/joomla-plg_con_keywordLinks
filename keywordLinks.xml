	<description>Linking article by metakeywords. Like(replace quotes with curly brackets): "kwl [boolen expression of keywords]", e.g. "kwl computer" or "kwl computer&amp;!(Windows|Mac)".</description>

		<files target="plugins/content/keywordLinks/">
			<filename plugin="keywordLinks">keywordLinks.php</filename>
			<filename>css/keywordLink.css</filename>
		</files>
		<files>
			<folder>css</folder>
			<folder>languages</folder>
			<folder>languages/en-GB</folder>
			<folder>languages/de-DE</folder>
		</files>

		<languages folder="language">
			<language tag="en-GB">en-GB.plg_content_keywordLinks.ini</language>
			<language tag="de-DE">de-DE.plg_content_keywordLinks.ini</language>
		</languages>
	<config>
	</config>
</install>